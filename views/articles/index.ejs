<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <div class="container" >
        <h1 class="mb-4">Blog Article</h1>
        <a href="/new" class="btn btn-success">New Article</a>
        <br>
        <br>
        <% articles.forEach(article => { %>
            <div class="card mt4">
                <div class="card-body">
                    <h4 class="card-title"><%= article.title%></h4>
                    <div class="card-subtitle text-muted mb-2">
                      <strong><div class="card-text mb-2"><%- article.createdAt.toLocaleDateString() %></div></strong>
                      <div ><%= article.description%></div>
                      <a href="/<%= article.slug %>" class="btn btn-primary">Read More</a>
                      <a href="/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                      <form action="/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button class="btn btn-danger" type="submit">Delete</button>
                      </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>